<% content_for :title, "Payments" %>

<%= pane_layout do |layout| %>
  <%= layout.header do %>
    
  <% end %>
  <%= layout.inner do %>
    <div class="payments container">
      <table class="fancy">
        <thead>
          <tr>
            <th>Date</th>
            <th>Completed?</th>
            <th>Reference</th>
            <th style="text-align:right">Amount</th>
            <th>Name</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <% @payments.each do |payment| %>
            <tr>
              <td><%= payment.created_at.to_formatted_s(:short) %></td>
              <td><%= payment.succeded %></td>
              <td><%= payment.reference %></td>
              <td style="text-align:right"><%= number_to_currency payment.amount %></td>
              <td><%= payment.name %></td>
              <td><%= payment.email || "â€”" %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="6"><%= will_paginate @payments %></td>
          </tr>
        </tfoot>
      </table>
    </div>
  <% end %>
<% end %>

<% content_for :left do %>
  <%= pane_layout do |layout| %>
    <%= layout.header do %>
      <h2>Payments</h2>
    <% end %>
    <%= layout.inner do %>

    <% end %>
  <% end %>
<% end %>

<% content_for :head do %>
  <%= stylesheet_link_tag "/breeze/stylesheets/payments.css" %>
<% end %>